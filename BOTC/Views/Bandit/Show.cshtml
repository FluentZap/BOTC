@{
    ViewData["Title"] = "Home Page";
}

<div class="splash-title">
    <h1 class="display-4">BANDITS OF THE COAST</h1>
    <h3>
      @Model.Name The
      @if(Model.Class.Strength > 9)
      {
        <span>Mighty</span>
      }
      else
      {
        <span>Weak</span>
      }
      @Model.Class.Name
    </h3>
    <p>Strength: @Model.Class.Strength</p>
    <p>Current Health: @Model.Class.CurrentHealth</p>
    <p>Total Health: @Model.Class.TotalHealth</p>

</div>

